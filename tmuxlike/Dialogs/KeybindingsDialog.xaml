<Window x:Class="tmuxlike.Dialogs.KeybindingsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Keyboard Shortcuts" Height="520" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#1e1e1e">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Click a shortcut to reassign it" Foreground="#888"
                   FontSize="12" Margin="0,0,0,12" />

        <!-- Keybinding list -->
        <ListView Grid.Row="1" x:Name="BindingsList" Background="#252526" BorderBrush="#3c3c3c"
                  BorderThickness="1" Foreground="White" FontSize="13"
                  SelectionChanged="BindingsList_SelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Action" Width="200"
                                    DisplayMemberBinding="{Binding DisplayName}" />
                    <GridViewColumn Header="Shortcut" Width="250"
                                    DisplayMemberBinding="{Binding Shortcut}" />
                </GridView>
            </ListView.View>
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="Foreground" Value="#e1e1e1" />
                    <Setter Property="Padding" Value="4,6" />
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="#37373d" />
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#2a2d2e" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </ListView.ItemContainerStyle>
        </ListView>

        <!-- Status text -->
        <TextBlock Grid.Row="2" x:Name="StatusText" Foreground="#888" FontSize="11"
                   Margin="0,8,0,0" TextWrapping="Wrap" Height="20" />

        <!-- Buttons -->
        <DockPanel Grid.Row="3" Margin="0,12,0,0">
            <Button Content="Open Config File" Click="OpenConfigFile_Click" DockPanel.Dock="Left"
                    Background="Transparent" Foreground="#569cd6" BorderThickness="0" Padding="0,4" FontSize="11"
                    Cursor="Hand" />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Reset All" Click="ResetAll_Click" Width="80" Margin="0,0,8,0"
                        Background="#3c3c3c" Foreground="#ccc" BorderThickness="0" Padding="8,4" FontSize="12"
                        ToolTip="Reset all shortcuts to defaults" />
                <Button Content="Save" Click="Save_Click" IsDefault="True" Width="80" Margin="0,0,8,0"
                        Background="#007acc" Foreground="White" BorderThickness="0" Padding="8,4" FontSize="12" />
                <Button Content="Cancel" Click="Cancel_Click" IsCancel="True" Width="80"
                        Background="#3c3c3c" Foreground="#ccc" BorderThickness="0" Padding="8,4" FontSize="12" />
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>
