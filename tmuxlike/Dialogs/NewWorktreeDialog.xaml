<Window x:Class="tmuxlike.Dialogs.NewWorktreeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="New Worktree" Height="220" Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#1e1e1e">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Text="Branch name:" Foreground="#ccc" VerticalAlignment="Center" Margin="0,0,0,8" />
        <TextBox Grid.Row="0" Grid.Column="1" x:Name="BranchInput" Margin="0,0,0,8"
                 Background="#3c3c3c" Foreground="White" BorderBrush="#555" Padding="6,4"
                 TextChanged="BranchInput_TextChanged" FontSize="13" />

        <TextBlock Grid.Row="1" Grid.Column="0" Text="Base:" Foreground="#ccc" VerticalAlignment="Center" Margin="0,0,0,8" />
        <TextBox Grid.Row="1" Grid.Column="1" x:Name="BaseInput" Text="HEAD" Margin="0,0,0,8"
                 Background="#3c3c3c" Foreground="White" BorderBrush="#555" Padding="6,4" FontSize="13" />

        <TextBlock Grid.Row="2" Grid.Column="0" Text="Path:" Foreground="#ccc" VerticalAlignment="Center" Margin="0,0,0,8" />
        <TextBox Grid.Row="2" Grid.Column="1" x:Name="PathPreview" IsReadOnly="True" Margin="0,0,0,8"
                 Background="#2d2d2d" Foreground="#999" BorderBrush="#555" Padding="6,4" FontSize="11" />

        <StackPanel Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal"
                    HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="Create" Click="OK_Click" IsDefault="True" Width="80" Margin="0,0,8,0"
                    Background="#007acc" Foreground="White" BorderThickness="0" Padding="8,4" FontSize="12" />
            <Button Content="Cancel" Click="Cancel_Click" IsCancel="True" Width="80"
                    Background="#3c3c3c" Foreground="#ccc" BorderThickness="0" Padding="8,4" FontSize="12" />
        </StackPanel>
    </Grid>
</Window>
